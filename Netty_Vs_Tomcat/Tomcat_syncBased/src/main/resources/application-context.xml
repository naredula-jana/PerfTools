                <property name="workerCount" value="2"/>
    </bean>   
    <bean id="sharedNIOPool" class="io.netty.channel.EventLoopGroup"
                factory-bean="poolBuilder" factory-method="build" destroy-method="shutdown">
    </bean> -->
 
</beans>
